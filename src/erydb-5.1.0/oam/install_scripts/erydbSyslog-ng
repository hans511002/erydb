# erydb Database Platform Logging

source s_erydb {
        # message generated by Syslog-NG
        internal();
        # standard Linux log source (this is the default place for the syslog()
        # function to send logs to)
        unix-stream("/dev/log");
        # messages from the kernel
        file("/proc/kmsg" log_prefix("kernel: "));
        # use the following line if you want to receive remote UDP logging messages
        # (this is equivalent to the "-r" syslogd flag)
        # udp();
};

filter f_local1crit { facility(local1) and level(crit); };
filter f_local1err  { facility(local1) and level(err); };
filter f_local1warning { facility(local1) and level(warning); };
filter f_local1info { facility(local1) and level(info); };
filter f_local1debug { facility(local1) and level(debug); };
filter f_local2crit { facility(local2) and level(crit); };

destination d_crit{
	file("/var/log/erydb/crit.log");
};

destination d_err{       
	file("/var/log/erydb/err.log");
};

destination d_warning{       
	file("/var/log/erydb/warning.log");
};

destination d_info{       
	file("/var/log/erydb/info.log");
};

destination d_debug{       
	file("/var/log/erydb/debug.log");
};

destination d_data_mods{       
	file("/var/log/erydb/data/data_mods.log");
};

log{
        source(s_erydb);
        filter(f_local1crit);
        destination(d_crit);
};

log{        
	source(s_erydb);        
	filter(f_local1err);        
	destination(d_err);
};
log{        
	source(s_erydb);        
	filter(f_local1warning);        
	destination(d_warning);
};
log{        
	source(s_erydb);        
	filter(f_local1info);        
	destination(d_info);
};
log{        
	source(s_erydb);        
	filter(f_local1debug);        
	destination(d_debug);
};
log{        
	source(s_erydb);        
	filter(f_local2crit);        
	destination(d_data_mods);
};

